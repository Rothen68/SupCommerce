<persistence 
xmlns="http://java.sun.com/xml/ns/persistence"
version="2.0">
	<persistence-unit name="persistenceUnit" >
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.supinfo.supcommerce.entity.Category</class>		
		<class>com.supinfo.supcommerce.entity.Product</class>
		<properties>		
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property  name="javax.persistence.jdbc.user"  value="supcommerce" />
			<property  name="javax.persistence.jdbc.password"  value="supcommerce" />
			<property  name="javax.persistence.jdbc.url"  value="jdbc:mysql://localhost:3306/supcommerce" />
	     	<property name="hibernate.hbm2ddl.auto" value="update"/>
	     </properties>
	</persistence-unit>
</persistence>

